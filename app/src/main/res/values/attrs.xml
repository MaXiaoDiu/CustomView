<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingButton">
        <attr name="btnColor" format="reference|color" />
        <attr name="btnText" format="reference|string" />
        <attr name="btnTextColor" format="reference|color" />
        <attr name="circleColor" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_color" format="reference|color"/>
        <attr name="border_width" format="dimension"/>
        <attr name="corner_radius" format="dimension"/>
        <attr name="leftTop_corner_radius" format="dimension"/>
        <attr name="leftBottom_corner_radius" format="dimension"/>
        <attr name="rightTop_corner_radius" format="dimension"/>
        <attr name="rightBottom_corner_radius" format="dimension"/>
        <!--图片类型：圆角或者圆形-->
        <attr name="type" format="enum">
            <enum name="round" value="1"/>
            <enum name="circle" value="0"/>
        </attr>
    </declare-styleable>
</resources>